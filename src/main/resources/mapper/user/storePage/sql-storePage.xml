<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ksmart.ks48team02.user.mapper.storePage.StorePageMapper">
    <select id="storePageNewsList" resultType="ksmart.ks48team02.user.dto.StorePageDto">
        <!-- MyBatis XML 매퍼에서 SQL 쿼리를 작성시
         SQL 쿼리는  <, >, &, ", '와 같은 특수 문자를 포함할 수 있으므로
         CDATA 섹션을 사용하여 해당 문자들을 원본 그대로 유지 -->
        <![CDATA[
            SELECT
	            title,
	            contents,
	            created_datetime
            FROM
	            store_news
            WHERE
	            store_news_display = 1;
        ]]>
    </select>
</mapper>
